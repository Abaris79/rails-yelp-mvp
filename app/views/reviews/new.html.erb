
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.error_notification %>
        <%= f.input :content %>
        <%= f.input :rating, collection: Review::RATES, prompt: "Select a rate" %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
